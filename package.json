        "sass": "^1.20.1",
        "sass-loader": "7.*",
        "tailwindcss-transforms": "^2.2.0",
        "vue": "^2.5.17",
        "vue-quill-editor": "^3.0.6",
        "vue-template-compiler": "^2.6.10",
